---
interface Props {
  text: string;
  href: string;
  color?: string;
}

const { text, href, color } = Astro.props;
---

<div class="rounded-md shadow">
  <a
    href={href}
    class="w-full flex items-center justify-center px-8 py-3 text-base font-medium rounded-md text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 md:py-4 md:text-lg md:px-10"
  >
    {text}
  </a>  
</div>
